<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Register - Absensi Siswa SMKN 1 MAJA</title>
  <link rel="shortcut icon" href="https://www.svgrepo.com/show/427530/calendar-date-schedule.svg" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <nav class="navbar navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Manu Blog</a>
      <div class="d-flex align-items-center">
        <div class="btn-group" role="group" aria-label="login/register">
          <a class="btn btn-outline-light" href="/users/register">Sign Up</a>
        </div>
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
          <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel"><%= userLogged ? "Settings" : "Menu" %></h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
          </div>
          <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#"></a>
              </li>
              <% if(userLogged) { %>
              <li class="nav-item border border-white bg-opacity-9 bg-success border-3">
                <h1 class="nav-link disabled fs-3 ms-2" style="color: white">Username</h1>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">My Blog</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Account Settings
                </a>
                <ul class="dropdown-menu dropdown-menu-dark">
                  <li><a class="dropdown-item" href="#">Reset Password</a></li>
                  <li><a class="dropdown-item" href="#">Change Account Information</a></li>
                  <li><a class="dropdown-item" href="/logout">Logout</a></li>
                  <li>
                    <hr class="dropdown-divider">
                  </li>
                  <li><a class="dropdown-item" href="#"></a></li>
                </ul>
              </li>
              <% } %>
            </ul>
            <form class="input-group" role="search">
              <input class="form-control" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <div class="container d-flex justify-content-center align-items-center mt-4" style="width: 100vw; height: 100vh">
    <form action="/users/register" method="POST" class="rounded shadow-lg text-center p-3 d-flex align-items-center flex-column" style="width: 400px; height: 650px;">
      <h1 class="text-center fs-2 mb-1">Sign Up</h1>
      <% if(message) { %>
        <div class="alert alert-danger" role="alert">
            <%= message %>
        </div>        
      <% } %>

      <!-- CSRF Token -->
      <input type="hidden" name="_csrf" value="<%= csrf %>">

      <!-- Username -->
      <div class="form-floating mt-3 mb-2 shadow-sm">
        <input type="text" class="form-control" id="floatingInput" placeholder="Username" name="username" required>
        <label for="floatingInput">Username</label>
      </div>

      <!-- Email -->
      <div class="form-floating mt-3 mb-2 shadow-sm">
        <input type="email" class="form-control" id="floatingEmail" placeholder="Email" name="email" required>
        <label for="floatingEmail">Email</label>
      </div>

      <!-- Password -->
      <div class="form-floating mt-3 mb-2 shadow-sm">
        <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password" required>
        <label for="floatingPassword">Password</label>
      </div>
      <div class="form-floating mt-3 mb-2 shadow-sm">
        <input type="password" class="form-control" id="floatingPassword" placeholder="Retry Password" name="password2" required>
        <label for="floatingPassword">Retry password</label>
      </div>

      <!-- Bio -->
      <div class="form-floating mt-3 mb-2 shadow-sm">
        <textarea class="form-control" id="floatingBio" placeholder="Your bio" name="bio" rows="5" required></textarea>
        <label for="floatingBio">Bio</label>
      </div>

      <button type="submit" class="btn btn-outline-warning mt-3 shadow-sm" style="width: 100%">Register</button>

      <p class="mt-3">Already have an account? <a href="/users/login">Login</a></p>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
